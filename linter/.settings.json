    "clang-tidy":
    {
        "enabled":"true",
        "place_holders":["build_path"],
        "options":
        [
            "--use-color"
            ,"-p {build_path}"
            ,[
             "--checks="
             ,"-*"
             ,",clang-analyzer-*"
